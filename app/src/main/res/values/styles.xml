<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!-- <style name="AppBaseTheme" parent="Theme.AppCompat.Light"> -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="colorPrimary">@color/acg_fen2</item>
        <item name="colorPrimaryDark">@color/acg_fen2</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="appbg">@color/acg_fen2</item>

    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>

    </style>



    <style name="AppBaseThemeZi" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/jilaozi</item>
        <item name="colorPrimaryDark">@color/jilaozi</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="appbg">@color/jilaozi</item>
    </style>

    <style name="AppThemeZi" parent="AppBaseThemeZi">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>



    <style name="AppBaseThemeLan" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pangcilan</item>
        <item name="colorPrimaryDark">@color/pangcilan</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="appbg">@color/pangcilan</item>
    </style>

    <style name="AppThemeLan" parent="AppBaseThemeLan">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>

    </style>



    <style name="AppBaseThemeFen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/shaonvfen</item>
        <item name="colorPrimaryDark">@color/shaonvfen</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="appbg">@color/shaonvfen</item>
    </style>

    <style name="AppThemeFen" parent="AppBaseThemeFen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>

    </style>



    <style name="AppBaseThemeHong" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/yimahong</item>
        <item name="colorPrimaryDark">@color/yimahong</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="appbg">@color/yimahong</item>
    </style>

    <style name="AppThemeHong" parent="AppBaseThemeHong">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>



    <!-- popwidnow 显示/消失 动画 -->
    <style name="mypopwindow_anim_style_menu">
        <item name="android:windowEnterAnimation">@anim/menu_slide_enter</item>
        <item name="android:windowExitAnimation">@anim/menu_slide_exit</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!-- 加载等待框 -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@drawable/toast_frame2</item>
        <item name="android:windowAnimationStyle">@style/Progress_dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Progress_dialog">
        <item name="android:windowEnterAnimation">@anim/zoom_in_enter</item>
        <item name="android:windowExitAnimation">@anim/zoom_out_exit</item>
    </style>


    <style name="mystyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <!-- popwidnow 显示消失 动画 -->

    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/zoom_in_enter</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/zoom_out_exit</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="translucent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/activity_translate_in</item>
        <item name="android:windowExitAnimation">@anim/activity_translate_out</item>
    </style>

    <style name="PopupAnimation1" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="AnimBottomDialog" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
        <item name="android:windowNoTitle">true</item>
    </style>



    <!-- StatusBar为透明色 -->
    <style name="ColorTranslucentTheme" parent="@style/AppBaseTheme" />

    <!-- 主界面 设置Style -->
    <style name="MainActivityColorTranslucentTheme" parent="@style/AppBaseTheme" />


    <style name="CollapsingToolbarTitleStyle.About" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <!--Theme Dialog style-->
    <style name="AppTheme.AppCompat.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:maxWidth">1080dp</item>
    </style>

    <!--ToolBar TextSize style-->
    <style name="ToolBar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
